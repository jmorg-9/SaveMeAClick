{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 240
      }
    }
  ],
  "routes": [
    {
      "src": "/summarize",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://the-clickbait-crusader.vercel.app",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type",
        "Access-Control-Max-Age": "86400"
      },
      "continue": false
    },
    {
      "src": "/summarize",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Origin": "https://the-clickbait-crusader.vercel.app",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      },
      "dest": "/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.ts"
    }
  ]
}